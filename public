const fs = require('fs');

const htmlContent = `
<!DOCTYPE html>
<html>
<head>
    <title>Mi Página Generada</title>
</head>
<body>
    <h1>Hola, mundo!</h1>
    <p>Este es un ejemplo de página generada automáticamente.</p>
</body>
</html>
`;

fs.writeFileSync('docs/index.html', htmlContent);

console.log('Página generada con éxito.');
